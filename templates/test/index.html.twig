{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}

    <div class="cabinet-panel p-4 rounded-4 shadow-lg">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="m-0 text-white">Cabinet 1</h5>
            <small class="text-secondary">Select a drawer</small>
        </div>

        <div class="cabinet-grid">

            <div></div><div class="col-head">1</div><div class="col-head">2</div><div class="col-head">3</div><div class="col-head">4</div>

            <div class="row-head">A</div>
            <button class="drawer-btn">A1</button>
            <button class="drawer-btn">A2</button>
            <button class="drawer-btn active">A3</button>
            <button class="drawer-btn">A4</button>

            <div class="row-head">B</div>
            <button class="drawer-btn">B1</button>
            <button class="drawer-btn">B2</button>
            <button class="drawer-btn">B3</button>
            <button class="drawer-btn">B4</button>

            <div class="row-head">C</div>
            <button class="drawer-btn">C1</button>
            <button class="drawer-btn">C2</button>
            <button class="drawer-btn">C3</button>
            <button class="drawer-btn">C4</button>

            <div class="row-head">D</div>
            <button class="drawer-btn">D1</button>
            <button class="drawer-btn">D2</button>
            <button class="drawer-btn">D3</button>
            <button class="drawer-btn">D4</button>

        </div>

        <div class="text-center mt-4">
            <button class="btn btn-secondary px-4">Turn Off Light</button>
        </div>
    </div>

    <style>
        .cabinet-panel {
            max-width: 500px;
            background: linear-gradient(180deg, #0f172a, #020617);
            border: 1px solid rgba(255,255,255,.1);
        }

        .cabinet-grid {
            display: grid;
            grid-template-columns: 32px repeat(4, 1fr);
            gap: 10px;
            align-items: center;
        }

        .col-head, .row-head {
            color: #94a3b8;
            font-size: .8rem;
            font-weight: 600;
            text-align: center;
        }

        .row-head { text-align: left; }

        .drawer-btn {
            height: 48px;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.15);
            background: linear-gradient(180deg, #1f2933, #111827);
            color: #e5e7eb;
            font-weight: 600;
            transition: all .15s ease;
        }

        .drawer-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 16px rgba(0,0,0,.4);
        }

        .drawer-btn.active {
            background: linear-gradient(180deg, #22c55e, #16a34a);
            color: #052e16;
            box-shadow:
                0 0 12px rgba(34,197,94,.8),
                0 0 24px rgba(34,197,94,.6);
            animation: pulse 1.2s infinite ease-in-out;
        }

        @keyframes pulse {
            0%,100% { box-shadow: 0 0 12px rgba(34,197,94,.8); }
            50% { box-shadow: 0 0 24px rgba(34,197,94,1); }
        }

    </style>

{% endblock %}
