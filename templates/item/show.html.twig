{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <img src="https://media.rs-online.com/F7976222-01.jpg" class="img-fluid"
                                     alt="{{ item.name }}"
                                     style="max-width: 200px;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ item.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ item.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Quantity</th>
                                        <td>{{ item.quantity }}</td>
                                    </tr>
                                    <tr>
                                        <th>Cabinet</th>
                                        <td>{{ item.drawer.cabinet.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Drawer</th>
                                        <td>{{ item.drawer.label }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                                <div class="d-flex gap-2 mt-3">
                                    <a href="{{ path('app_item_edit', {'id': item.id}) }}">
                                        <button class="btn btn-primary mt-3">Edit</button>
                                    </a>

                                    {{ include('item/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
